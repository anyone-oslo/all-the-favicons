<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <% @tiles.each do |icon| %>
        <<%= icon[:name] %> src="<%= asset_path(icon[:src]) %>"/>
      <% end %>
      <% if @tile_color %>
        <TileColor><%= @tile_color %></TileColor>
      <% end %>
    </tile>
  </msapplication>
</browserconfig>
